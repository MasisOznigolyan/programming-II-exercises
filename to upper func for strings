
#include <iostream>

using namespace std;
string uppper(string &x){
    
    
    for(int i=0; i< x.size();i++){
        if(x[i]>='a'&& x[i]<='z'){
            x[i]=x[i]-abs('a'-'A');     
            
        }
        
    }
    
  return x;  
}


int main()
{
    string z="hello";
    cout<<uppper(z);
    return 0;
}
